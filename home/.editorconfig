# ~/.editorconfig
# https://editorconfig.org/

root = false

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{sh,bash,zsh,fish}]
indent_size = 2

[*.md]
indent_size = 2

[*.{ini,cfg,conf,vim}]
indent_size = 4

[*.{html,css,scss,sass,less}]
indent_size = 2

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

[*.{json,json5,jsonc}]
indent_size = 2

[*.{yml,yaml,toml,diff}]
indent_size = 2

[*.{xml,svg,xhtml}]
indent_size = 2

[*.{dockerfile,Dockerfile}]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[*.lua]
indent_size = 4

[*.{java,cs}]
indent_size = 4

[*.sql]
indent_size = 4

[*.{c,h,cpp,hpp,cc,hh}]
indent_size = 4

[Makefile*]
indent_style = tab
indent_size = 4

[CMakeLists.txt]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4

[*.zig]
indent_size = 4

[*.rb]
indent_size = 2

[*.php]
indent_size = 4
