#!/bin/bash

# This is a wrapper script for lf that allows it to create image previews with ueberzug.
# This works in concert with the lf configuration file and the lf-cleaner script.

[ -f "$HOME/.config/fzf/fzfrc" ] && source "$HOME/.config/fzf/fzfrc"

export PYTHONWARNINGS="ignore::SyntaxWarning"

set -e

cleanup() {
    exec 3>&-
    rm "$FIFO_UEBERZUG"
}

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
    exec lf "$@"
else
    [ ! -d "$HOME/.cache/lf" ] && mkdir -p "$HOME/.cache/lf"
    export FIFO_UEBERZUG="$HOME/.cache/lf/ueberzug-$$"
    mkfifo "$FIFO_UEBERZUG"
    ueberzug layer -s -p json <"$FIFO_UEBERZUG" &
    exec 3>"$FIFO_UEBERZUG"
    trap cleanup HUP INT QUIT TERM PWR EXIT
    exec lf "$@"
fi
